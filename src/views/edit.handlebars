<div class="row h-100 justify-content-center m-0">
  <div class="col-md-6 col-sm-8 my-auto drop1 p-3">
    <div>
      <h1>Edit Pin</h1>
        <form action="/pin/delete/{{pin.id}}" method="POST" onsubmit="return confirm('Are you sure?')">
          <input type="submit" value="Delete Pin" class="btn btn-danger mb-2">
        </form>
      <h6>{{pin.address}}</h6>
      <em>Latitude: {{pin.lat}} // Longitude: {{pin.long}}</em>
    </div>

    <div class="">
      <form class="" action="/pin/{{pin.id}}" method="post">
        <div class="form-group">
          <label for="type">Name/Type</label>
          <input type="text" name="type" class="form-control" value={{pin.type}} required>
        </div>
        <div class="form-check">
          <input type="radio" class="form-check-input" name="health" id="healthy" value="healthy" required>
          <label for="healthy" class="form-check-label">Healthy</label><br>
          <input type="radio" class="form-check-input" name="health" id="careful" value="clip carefully">
          <label for="careful" class="form-check-label">Clip carefully</label><br>
          <input type="radio" class="form-check-input" name="health" id="alone" value="leave alone for now">
          <label for="alone" class="form-check-label">Leave alone for now</label><br>
        </div>
        <div class="form-group">
          <label for="description">Description</label>
          <textarea name="description" class="form-control" required>{{pin.description}}</textarea>
        </div>
        <input type="hidden" name="address" value="{{pin.address}}">
        <input type="hidden" name="lat" value={{pin.lat}}>
        <input type="hidden" name="long" value={{pin.long}}>
        <input type="submit" class="btn btn-primary" value="save">
      </form>
    </div>

  </div>
</div>

